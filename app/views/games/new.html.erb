<h1>New Game</h1>

<h2><%= @letters %></h2>

<% @letters.each  do |letter|%>
  <h2><%= letter %></h2>
<% end %>

<form action="score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <label >What is the longest word you can find?</label><br>
  <input type="text" name="longword"><br>
</form>
